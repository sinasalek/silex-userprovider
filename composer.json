{
    "name": "rootlogin/silex-userprovider",
    "type": "library",
    "description": "A simple database-backed user provider for Silex, with associated services and controllers.",
    "keywords": ["silex", "user", "user provider", "silex user provider"],
    "homepage": "http://github.com/chrootlogin/silex-userprovider",
    "license": "LGPL-3.0",
    "authors": [
        {
            "name": "Simon Erhardt",
            "email": "hello@rootlogin.ch"
        }
    ],
    "replace": {
        "jasongrimes/silex-simpleuser": "*"
    },
    "conflict": {
        "jasongrimes/silex-simpleuser": "*"
    },
    "require": {
        "php": ">=5.5.9",
        "doctrine/dbal": "^2.5",
        "silex/silex": "^2.0",
        "swiftmailer/swiftmailer": "^5.4",
        "symfony/form": "^2.8|^3.0",
        "symfony/security": "^2.8|^3.0",
        "symfony/security-bundle": "^2.8|^3.0",
        "symfony/security-csrf": "^2.8|^3.0",
        "symfony/translation": "^2.8|^3.0",
        "symfony/twig-bridge": "^2.8|^3.0",
        "symfony/validator": "^2.8|^3.0",
        "symfony/yaml": "^2.8|^3.0",
        "twig/twig": "^1.8|^2.0",
        "jasongrimes/paginator": "~1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.8",
        "ext-pdo_sqlite": "*",
        "symfony/console": "^2.8|^3.0",
        "dflydev/doctrine-orm-service-provider": " ^2.0"
    },
    "suggest": {
        "saxulum/saxulum-console": "Allows you to manage users via command line.",
        "dflydev/doctrine-orm-service-provider": "Allows the use of doctrine orm."
    },
    "autoload": {
        "psr-0": {
            "rootLogin": "src/"
        }
    },
    "autoload-dev": {
        "psr-0": {
            "rootLogin\\UserProvider\\Tests": "tests/"
        }
    },
    "non-feature-branches": [
        "silex2"
    ]
}
